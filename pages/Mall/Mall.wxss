/* pages/Mall/Mall.wxss */
@import '/lib/weui/weui.wxss';
page,
.page,
.page__bd{
  height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-navbar__title{
  font-weight: 900;
  color: #fff;
}
.weui-bar__item_on{
  color: #fff;
}
.weui-navbar{
  padding: 0 200rpx;
  background: #222;
  box-sizing: border-box;
}
.weui-navbar__item{
  width: 200rpx;
}
.weui-navbar__slider{
  width: 160rpx;
  background: #fff;
  color: #fff;
}
.weui-tab__content{
  width: 100%;
  height: 100%;
  display: flex;
  background: #f8f8f8;
}
.weui-tab__content .mall-list-left {
  width: 200rpx;
  overflow-x: hidden;
}
.mall-list-left-item{
  width: 90%;
  height: 80rpx;
  font-size: 28rpx;
  background: #ffffff;
  line-height: 80rpx;
  text-align: center;
  margin: 10rpx 5%
}
.list-left-item-active{
  background: #222;
  color: #fff;
}
/* 右边 */
.weui-tab__content .mall-list-scroll-view {
  width: 550rpx;
  overflow-x:hidden; 
  display: flex;
  flex-wrap: wrap;
}
.mall-content-item{
  width: 160rpx;
  height: 220rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin: 10rpx 0;
  margin-left:15rpx;
  background: #fff;
}
.mall-content-item image{
  width: 100%;
  height: 160rpx;
}