/* pages/Home/Home.wxss */
@import '/lib/weui/weui.wxss';
page{
  width: 100%;
}
view{
  box-sizing: border-box;
}
.home{
  background: #f8f8f8;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.banners{
  width: 750rpx;
  height: 276rpx;
}
.banners .banner-item{
  width: 750rpx;
  height: 276rpx;
}
.banners .slide-image{
  width: 750rpx;
  height: 276rpx;
}
.banner{
  overflow: hidden;
  background: #ffffff;
}
.banner image{
  width:48%;
  margin-right: 5rpx; 
}
.content{
  padding: 0 20rpx;
  display: block;
  width: 100%;
  background: #f8f8f8;
}
.content .title{
  font-size: 34rpx;
  font-weight: 900;
  color: #222;
  line-height: 40px;
  overflow-y: hidden;
}
.content .info{
  width: 100% !important;
  height: 320rpx !important;
  display: flex !important;
}
.content .info .info-item{
  width: 200rpx !important;
  height: 290rpx !important;
  background: #ffffff !important;
  margin-bottom: 30rpx !important;
  padding:0 20rpx !important;
}
.content .info .info-item image{
  width: 200rpx;
  height: 200rpx;
}
.content .info .info-item text{
  font-size: 27rpx;
  color: #222;
}
.principal{
  width: 100%;
  background: #dedede;
}
.page,
.page__bd{
    height: 100%;
}
.page__bd{
  padding-bottom: 0;
}
.weui-navbar{
  box-sizing: border-box;
  padding: 0 20rpx;
  background: #ffffff;
}
.weui-navbar-item{
  color: #222;
  font-weight: 900;
  box-sizing: border-box;
  padding: 10rpx;
  width: 80rpx;
}
.weui-tab__content{
  display: flex;
  justify-content: start;
  flex-wrap: wrap;
}
.weui-navbar__title{
  color: #222;
}
.weui-bar__item_on{
  color: #222;
}
.weui-navbar__slider{
  color: #222;
  background: #222;
  width:80rpx;
}
.weui-item{
  margin-left:17rpx;
  margin-bottom: 15rpx;
  width:350rpx;
  height:480rpx;
  font-size: 26rpx;
}
.weui-item .item-title{
  display: block;
  width: 350rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-item image{
  width:350rpx;
  height:355rpx;
}
.weui-item .item-info{
  display: flex;
  justify-content: space-between;
  font-weight: 900;
  font-size: 32rpx;
  line-height: 50rpx;
  padding-right:10rpx;
}
.weui-item .item-info .item-icon{
  display: block;
  width: 40rpx;
  height: 40rpx;
}
.gotop{
  background: #fff;
  width:80rpx;
  height: 80rpx;
  position: fixed;
  right: 50rpx;
  bottom: 80rpx;
  z-index: 999;
}
